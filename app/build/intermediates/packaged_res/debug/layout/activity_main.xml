<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/BackgroundColor">


    <TextView
        android:id="@+id/txt_display"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="92dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:autoSizeMaxTextSize="40dp"
        android:textAlignment="textEnd"
        android:textColor="@color/cyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2048"
        tools:textSize="40dp"/>

    <ImageButton
        android:id="@+id/button_backspace"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="36dp"
        android:onClick="button_backspace_clicked"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_backspace_24" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/cyan"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- first row-->

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_c"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_c_clicked"
                android:text="C"
                android:textColor="@color/watermelon"
                android:textSize="28dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_left_bracket"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_left_bracket_clicked"
                android:text="("
                android:textColor="@color/cyan"
                android:textSize="28dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_right_bracket"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_right_bracket_clicked"
                android:text=")"
                android:textColor="@color/cyan"
                android:textSize="28dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_division"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_division_clicked"
                android:text="/"
                android:textColor="@color/cyan"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- second row -->

        <LinearLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_seven"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="7"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_eight"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="8"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_nine"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="9"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_multiply"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_multiply_clicked"
                android:text="X"
                android:textColor="@color/cyan"
                android:textSize="28dp" />

        </LinearLayout>

        <!-- third row -->

        <LinearLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_four"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="4"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_five"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="5"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_six"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="6"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_minus"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_minus_clicked"
                android:text="-"
                android:textColor="@color/cyan"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- fourth row -->

        <LinearLayout
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="1"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_two"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="2"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_three"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="3"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_plus"
                style="@style/ButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_plus_clicked"
                android:text="+"
                android:textColor="@color/cyan"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- fifth row -->

        <LinearLayout
            android:id="@+id/fifth_row"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_doublezero"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="00"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_zero"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="number_button_clicked"
                android:text="0"
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_dot"
                style="@style/NumberButtonColor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:onClick="button_dot_clicked"
                android:text="."
                android:textSize="28dp" />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/equal_button_shape"
                android:onClick="button_equal_clicked"
                android:text="="
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>