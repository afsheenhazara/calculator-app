<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="cyan">#09B49D</color>
    <color name="dark_grey">#262830</color>
    <color name="light_grey">#E2E2E2</color>
    <color name="off_white">#FFFFF8</color>
    <color name="teal">#004040</color>
    <color name="transparent_cyan">#BB09B49D</color>
    <color name="watermelon">#FF8080</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Calculator</string>
    <style name="BackgroundColor">
        <item name="android:backgroundTint">@color/off_white</item>
    </style>
    <style name="Base.Theme.Calculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        
        
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        
        <item name="android:navigationBarColor">@color/transparent_cyan</item>
    </style>
    <style name="ButtonColor">
        <item name="android:background">@drawable/button_shape_light</item>
    </style>
    <style name="NumberButtonColor">
        <item name="android:background">@drawable/button_shape_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.Calculator" parent="Base.Theme.Calculator"/>
</resources>